rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // All authenticated can read others
    }
    
    // Groups - authenticated users can read, admins can write
    match /groups/{groupId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // TODO: restrict to admins
    }
    
    // Materias - same as groups
    match /materias/{materiaId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Projects - authenticated can read/write
    match /projects/{projectId} {
      allow read, write: if request.auth != null;
    }
    
    // Evaluations
    match /evaluations/{evalId} {
      allow read, write: if request.auth != null;
    }
  }
}